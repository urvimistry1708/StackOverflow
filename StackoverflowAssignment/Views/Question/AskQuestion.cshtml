@model StackoverflowAssignment.Models.AskQuestionViewModel
<div style="margin: 5% 20%;">

    <div style="padding:50px">
        <center style="padding-bottom:10px"><h3>Ask Question</h3></center>


        <form method="post" action="AskQuestion">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
              
                <select asp-for="CategoryId" class="form-select"
                        asp-items="@(new SelectList(@ViewBag.AllCategories,"CategoryId", "CategoryName"))">
                </select>
            </div>
            <div class="mb-3">
                <label for="QuestionName" class="form-label">QuestionName</label>
                <input type="text" class="form-control" id="QuestionName" asp-for="QuestionName">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>